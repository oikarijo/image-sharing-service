div(class="modal-header")
	button(type='button' class="close" data-dismiss="modal") &times;
	img(src='uploads/' + id)
div(class="modal-body")
	div(class='form-group')
		label(for='comment_content') COMMENTS
		textarea(class='form-control' rows='3' id='comment_content' name='comment' placeholder='Write a comment')
		input(type='hidden' id='image_id' value=id)
		input(type='button' value='SEND' class='btn btn-success' id='submit_comment')
	div(id='showComments')
		if(comments)
			for comment in comments
				p #{comment}
				hr
	button(type="button" class="clear btn btn-default" data-dismiss="modal") CLOSE

